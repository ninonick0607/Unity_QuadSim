<ui:UXML xmlns:ui="UnityEngine.UIElements" editor-extension-mode="False">
    <ui:Template name="ControlTemplate" src="project://database/Assets/UI/SimHUD/Control/ControlDeck.uxml#ControlDeck"/>
    <ui:Template name="TelemetryTemplate" src="project://database/Assets/UI/SimHUD/Telemetry/SimTelemetryPanel.uxml#SimTelemetryPanel"/>
    <ui:Template name="TopBarTemplate" src="project://database/Assets/UI/SimHUD/TopBar/SimTopBar.uxml#SimTopBar"/>

    <!-- Load global HUD sizing + theme FIRST -->
    <Style src="project://database/Assets/UI/SimHUD/SimHUDRoot.uss#SimHUDRoot"/>
    <Style src="project://database/Assets/UI/SimHUD/Theme/QuadSimTheme.uss#QuadSimTheme"/>

    <!-- Optional shared widget styling -->
    <Style src="project://database/Assets/UI/SimHUD/Shared/Widgets.uss#Widgets"/>
    <Style src="project://database/Assets/UI/SimHUD/Shared/DockableWindow.uss#DockableWindow"/>

    <!-- Panel styles -->
    <Style src="project://database/Assets/UI/SimHUD/TopBar/SimTopBar.uss#SimTopBar"/>
    <Style src="project://database/Assets/UI/SimHUD/Telemetry/SimTelemetryPanel.uss#SimTelemetryPanel"/>
    <Style src="project://database/Assets/UI/SimHUD/Control/ControlDeck.uss#ControlDeck"/>

    <ui:VisualElement name="HUDRoot" class="hud-root">
        <ui:Instance template="TopBarTemplate"/>
        <ui:Instance template="TelemetryTemplate"/>
        <ui:Instance template="ControlTemplate"/>
    </ui:VisualElement>
</ui:UXML>