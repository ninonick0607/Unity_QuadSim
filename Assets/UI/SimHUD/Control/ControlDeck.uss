/* blue slider look (Unity internal parts) */
.axis-slider .unity-base-slider__track,
.axis-slider .unity-slider__track {
    height: 6px;
    border-radius: 3px;
    background-color: rgba(255,255,255,0.12);
    border-width: 1px;
    border-color: rgba(0,0,0,0.65);
}

.axis-slider .unity-base-slider__fill,
.axis-slider .unity-slider__fill {
    height: 6px;
    border-radius: 3px;
    background-color: rgba(90,140,255,0.55);
}

.axis-slider .unity-base-slider__dragger,
.axis-slider .unity-slider__dragger,
.axis-slider .unity-base-slider__thumb,
.axis-slider .unity-slider__thumb {
    width: 12px;
    height: 18px;
    margin-top: -6px;
    border-radius: 3px;
    background-color: rgba(255,255,255,0.95);
    border-width: 1px;
    border-color: rgba(0,0,0,0.95);
}



/* Reset row */
.reset-row { margin-top: 10px; }
.control-reset { height: 28px; }

/* Footer pinned */
.control-footer {
    flex-shrink: 0;

    padding: 10px;

    border-top-width: 1px;
    border-top-color: rgba(255,255,255,0.08);

    background-color: rgba(0,0,0,0.12);

    justify-content: flex-end;
    flex-wrap: wrap;
}

.control-footer > * {
    margin-right: 8px;
    margin-bottom: 8px;
}

/* small spacer inside scroll view so last content isn't hidden behind footer */
.footer-spacer {
    height: 10px;
}

/* --- Resize overlay + handles (big + corners win) --- */
.control-root .resize-overlay {
    position: absolute;
    left: 0; right: 0; top: 0; bottom: 0;
}

.control-root .resize-handle {
    position: absolute;
    background-color: rgba(90,140,255,0.00);
}

/* Sizes */
.control-root { --edgeHit: 12px; --cornerHit: 22px; }

/* Corners (on top / largest hit area) */
.control-root .resize-handle.corner.tl { left: -10px; top: -10px; width: 22px; height: 22px; }
.control-root .resize-handle.corner.tr { right: -10px; top: -10px; width: 22px; height: 22px; }
.control-root .resize-handle.corner.bl { left: -10px; bottom: -10px; width: 22px; height: 22px; }
.control-root .resize-handle.corner.br { right: -10px; bottom: -10px; width: 22px; height: 22px; }

/* Edges: INSET so they do not cover the corner squares */
.control-root .resize-handle.edge.l { left: -6px; top: 16px; bottom: 16px; width: 12px; }
.control-root .resize-handle.edge.r { right: -6px; top: 16px; bottom: 16px; width: 12px; }
.control-root .resize-handle.edge.t { top: -6px; left: 16px; right: 16px; height: 12px; }
.control-root .resize-handle.edge.b { bottom: -6px; left: 16px; right: 16px; height: 12px; }

/* Hover feedback */
.control-root .resize-handle:hover { background-color: rgba(90,140,255,0.10); }
.control-root .resize-handle.corner:hover { background-color: rgba(90,140,255,0.18); }


/* Subtle hover feedback (so you can find the edges) */
.control-root .resize-handle:hover {
    background-color: rgba(90,140,255,0.10);
}

.control-root .resize-handle.corner:hover {
    background-color: rgba(90,140,255,0.18);
}

