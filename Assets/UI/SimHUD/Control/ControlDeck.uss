/* ------------------------------------------------------------
   ControlDeck.uss (Unity 6.3 safe)
   - No gap
   - No pseudo selectors like :last-child / :focus
------------------------------------------------------------ */

.control-root {
    position: absolute;
    /* DockableWindowController will override these when docking/floating,
       but having sane defaults helps during early layout. */
    right: 10px;
    top: 60px;

    width: 420px;
    min-width: 360px;

    background-color: rgba(18,18,18,0.90);
    border-width: 1px;
    border-color: rgba(255,255,255,0.10);
    border-radius: 10px;

    flex-direction: column;
    overflow: hidden;
}

/* basic layout helpers (avoid relying on other USS) */
.row { flex-direction: row; align-items: center; }
.wrap { flex-wrap: wrap; }
.spacer { flex-grow: 1; }

/* Title bar */
.control-titlebar {
    height: 36px;
    padding-left: 10px;
    padding-right: 10px;

    background-color: rgba(255,255,255,0.05);
    border-bottom-width: 1px;
    border-bottom-color: rgba(255,255,255,0.08);

    flex-shrink: 0;
}

.control-title {
    -unity-font-style: bold;
    font-size: 13px;
    color: rgba(240,240,240,1.0);
    margin-right: 10px;
}

.control-meta {
    font-size: 11px;
    color: rgba(255,255,255,0.60);
}

/* Scroll body */
.control-body {
    flex-grow: 1;
    flex-shrink: 1;

    /* leave room visually above footer */
    padding: 10px;
}

/* sections */
.control-section {
    margin-bottom: 10px;
}

.control-label {
    width: 56px;
    font-size: 12px;
    color: rgba(255,255,255,0.65);
    margin-right: 10px;
}

.control-h4 {
    margin-top: 0;
    margin-bottom: 8px;
    font-size: 12px;
    color: rgba(255,255,255,0.80);
    -unity-font-style: bold;
}

/* dropdown */
.control-dropdown {
    flex-grow: 1;
    height: 30px;
}

/* Tabs (HTML-like) */
.control-tabs { flex-direction: row; }
.control-tabs > * { margin-right: 8px; margin-bottom: 8px; }

.tab {
    height: 28px;
    padding-left: 10px;
    padding-right: 10px;

    border-radius: 7px;
    border-width: 1px;
    border-color: rgba(255,255,255,0.12);

    background-color: rgba(255,255,255,0.06);
    color: rgba(255,255,255,0.92);

    -unity-text-align: middle-center;
    font-size: 12px;
    -unity-font-style: bold;
}

.tab.active {
    background-color: rgba(90,140,255,0.25);
    border-color: rgba(90,140,255,0.55);
    color: rgba(220,235,255,0.95);
}

/* Foldouts (container look like HTML “fold”) */
.control-fold {
    margin-bottom: 10px;

    border-width: 1px;
    border-color: rgba(255,255,255,0.10);
    border-radius: 10px;

    background-color: rgba(0,0,0,0.18);
    padding-left: 8px;
    padding-right: 8px;
    padding-bottom: 8px;
}

/* Foldout header text style: try a few Unity-internal selectors */
.control-fold .unity-foldout__toggle,
.control-fold .unity-foldout__text {
    color: rgba(240,240,240,1.0);
    -unity-font-style: bold;
    font-size: 12px;
}

/* Clamp grid */
.clamp-grid { flex-direction: column; }

.clamp-row {
    margin-top: 8px;
}

.clamp-row > * { margin-right: 10px; }

.clamp-axis {
    width: 52px;
    font-size: 12px;
    color: rgba(255,255,255,0.72);
    -unity-font-style: bold;
}

/* numeric fields (FloatField) */
.control-num {
    width: 96px;
    height: 28px;
}
/* -----------------------------
   Text / number input styling
   - Force dark background
   - Fix vertical clipping by matching inner input height + padding
------------------------------ */

/* Outer containers */
.control-root .control-num,
.control-root .control-dropdown {
    height: 30px;          /* bump to 30 to match your topbar inputs */
    min-height: 30px;
}

/* Unity internal input element names vary by version.
   Style ALL of them. */
.control-root .unity-text-input,
.control-root .unity-text-field__input,
.control-root .unity-float-field__input,
.control-root .unity-integer-field__input,
.control-root .unity-double-field__input,
.control-root .unity-long-field__input {
    height: 30px;
    min-height: 30px;

    background-color: rgba(0,0,0,0.30);
    color: rgba(235,235,235,1.0);

    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;

    border-left-color: rgba(255,255,255,0.14);
    border-right-color: rgba(255,255,255,0.14);
    border-top-color: rgba(255,255,255,0.14);
    border-bottom-color: rgba(255,255,255,0.14);

    border-radius: 6px;

    /* This is the key to stopping top/bottom clipping */
    padding: 6px 8px;

    -unity-text-align: middle-left;
}

/* Inputs */
.inputs { flex-direction: column; }

.axis-row {
    padding-top: 6px;
    padding-bottom: 6px;

    border-bottom-width: 1px;
    border-bottom-color: rgba(255,255,255,0.06);

    align-items: center;
}

.axis-row > * { margin-right: 10px; }

.axis-label {
    width: 52px;
    font-size: 12px;
    color: rgba(255,255,255,0.72);
    -unity-font-style: bold;
}

.axis-slider {
    flex-grow: 1;
    min-width: 160px;
}

.axis-num { width: 86px; }

.axis-read {
    width: 62px;
    font-size: 12px;
    color: rgba(190,255,205,0.95);
    -unity-text-align: middle-right;
}
.axis-reset {
    width: 28px;
    height: 28px;
    padding-left: 0;
    padding-right: 0;
    -unity-text-align: middle-center;
    opacity: 0.85;
}

/* -----------------------------
   Dropdown (DropdownField) styling
   - Dark background
   - Fix vertical clipping
------------------------------ */

.control-root .control-dropdown,
.control-root .topbar-select {
    height: 30px;
    min-height: 30px;
}

/* PopupField / DropdownField internals (Unity 6.x uses base-popup-field classes) */
.control-root .unity-base-popup-field__input,
.control-root .unity-popup-field__input,
.control-root .unity-dropdown-field__input {
    height: 30px;
    min-height: 30px;

    background-color: rgba(0,0,0,0.30);
    color: rgba(235,235,235,1.0);

    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;

    border-left-color: rgba(255,255,255,0.14);
    border-right-color: rgba(255,255,255,0.14);
    border-top-color: rgba(255,255,255,0.14);
    border-bottom-color: rgba(255,255,255,0.14);

    border-radius: 6px;

    /* leave room for arrow */
    padding: 6px 26px 6px 8px;

    -unity-text-align: middle-left;
}
/* Ensure popup-field text doesn't clip */
.control-root .unity-base-popup-field__text,
.control-root .unity-popup-field__text,
.control-root .unity-dropdown-field__text {
    padding-top: 6px;
    padding-bottom: 6px;
}
/* Text element inside the popup field */
.control-root .unity-base-popup-field__text,
.control-root .unity-popup-field__text,
.control-root .unity-dropdown-field__text {
    color: rgba(235,235,235,1.0);
}

